{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile Sass",
			"type":"shell",
			"command": "sass --no-source-map assets/sass:assets/css --style compressed",
			"windows": {
				"command": "sass --no-source-map  assets\\sass:assets\\ --style compressed"
			},
			"group":"build",
			"presentation": {
				"reveal": "always",
			},
		},
		{
			"label": "Watch Sass",
			"type": "shell",
			"command": "sass --watch --no-source-map assets/sass:assets/css --style compressed",
			"windows": {
				"command": "sass --watch --no-source-map assets\\sass:assets\\css --style compressed"
			},
			"group": "build",
			"presentation": {
				"reveal": "always",
			},
		},
	]
}